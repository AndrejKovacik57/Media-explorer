<UserControl x:Class="WpfApp1.Views.VideotilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.ViewModels" 
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:VideoTilesViewModel}">
    
    <UserControl.Resources>
        
        <DataTemplate x:Key="TileTemplate">
            <Grid 
                Background="#3f0e65"
                Width="300"
                Height="300">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            
                <Image x:Name="Thumbnail"
                       Source="{Binding Image}"
                       Width="150"
                       Height="300"
                       Stretch="Uniform"
                       Grid.Row="0" Grid.Column="0" />
            
                <StackPanel
                    x:Name="TileInformation"
                    Grid.Row="0" Grid.Column="1"
                    Margin="2">
            
                    <TextBlock
                        Text="{Binding Title}"
                        TextWrapping="Wrap"
                        FontWeight="Bold"
                        FontSize="16"
                        Foreground="Azure"
                        Margin="0,15,0,0"/>
            
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Text="Episodes: "
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="MediumOrchid" />
            
                        <TextBlock
                            Text="{Binding EpisodeNumber}"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#cecccd" />
                    </StackPanel>
                    <WrapPanel Margin="0,5,0,5">
                        <ItemsControl ItemsSource="{Binding Tags}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Content="{Binding}"
                                        Margin="2"
                                        />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </StackPanel>
                
                <Button
                    Grid.Row="1" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Content="Show Episodes"
                    Height="50"
                    BorderThickness="0"
                    Background="#501865"
                    Foreground="#cecccd"
                    FontSize="18"
                    Padding="0, 5"
                    Cursor="Hand"
                    Command="{Binding ShowEpisodes}"
                    />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <DockPanel>
        <!-- Top Bar with Search Box and Icons -->
        <Border DockPanel.Dock="Top" Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal">
                <!-- Search Box with Placeholder Effect -->
                <Grid>
                    <TextBox Name="SearchBox" Width="200" Height="30" Margin="5" /><!--GotFocus="" LostFocus="" -->
                    <TextBlock Name="SearchPlaceholder" Text="Search..." Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" IsHitTestVisible="False"/>
                </Grid>
                
                <!-- Icons -->
                <Button Content="🔍" Width="30" Height="30" Margin="5"/>
                <Button Content="⚙" Width="30" Height="30" Margin="5"/>
                <Button Content="🔔" Width="30" Height="30" Margin="5"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding VideoTiles}" ItemTemplate="{StaticResource TileTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
  
</UserControl>
